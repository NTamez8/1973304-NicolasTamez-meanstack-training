html(lang="en")
    head
        meta(charset="UTF-8")
        meta(http-equiv="X-UA-Compatible", content="IE=edge")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        title Add
    body   
        h1 Add Course
        ul 
            li 
                a(href="http://localhost:8080/") home page
            li 
                a(href="http://localhost:8080/add") Add Course
                    
            li 
                a(href="http://localhost:8080/update") Update Course
            li 
                a(href="http://localhost:8080/delete") Delete Course
            li 
                a(href="http://localhost:8080/fetch") Fetch Courses   
        form(action="/add", method="post")
            label Course Id: 
            input(type="number", name="cId")
            br
            label Course Name: 
            input(type="text", name="cName")
            br
            label Description: 
            input(type="text", name="desc")
            br
            label Amount: 
            input(type="number", name="amount" step='0.01')
            br
            input(type="submit", value="add")
            input(type="reset", value="reset") 