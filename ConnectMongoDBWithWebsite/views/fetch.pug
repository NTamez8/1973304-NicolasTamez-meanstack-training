doctype html
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(http-equiv="X-UA-Compatible", content="IE=edge")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        title List
    body 
        h1 List of courses
        ul 
            li 
                a(href="http://localhost:8080/") home page
            li 
                a(href="http://localhost:8080/add") Add Course
                    
            li 
                a(href="http://localhost:8080/update") Update Course
            li 
                a(href="http://localhost:8080/delete") Delete Course
            li 
                a(href="http://localhost:8080/fetch") Fetch Courses   
        table 
            thead 
                tr 
                    td Course Id 
                    td Course Name 
                    td Course description 
                    td Course Price 
            tbody 
                each course in courses 
                    tr 
                        td=course._id 
                        td=course.courseName 
                        td=course.description 
                        td=course.amount